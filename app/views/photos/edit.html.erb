<div class="row">
<div class='col-md-5'>
<%= simple_form_for photo, html: { class: 'form-horizontal' } do |form| %>
	<%= form.input :filename, label: 'Photo File' %>
	<%= form.input :caption %>
	<%= form.submit %>
	<% end %>
	</div>

<div class='col-md-7'>
<%= image_tag @photo.filename, size: '100x100' %>
</div>
</div>
